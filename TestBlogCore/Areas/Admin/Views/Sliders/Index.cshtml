@{
    ViewData["Title"] = "Lista de Sliders";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-primary">Sliders</h2>
        </div>
        <br />
        <div>
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Añadir Slider</a>
        </div>
        <br />
        <div class="col-md-12">
            <table class="table table-bordered table-striped" id="tlbSliders" style="width: 100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Imagen</th>
                        <th>Estado</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/sliders.js"></script>
}