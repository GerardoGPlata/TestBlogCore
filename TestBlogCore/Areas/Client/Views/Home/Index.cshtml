@model TestBlogCore.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Inicio";
}


<div class="row mt-1">
    <div class="col-sm-12">
        <h1 class="text-center text-dark bg-secondary py-1">Ultimos Articulos</h1>
    </div>
</div>

@if (Model.articlesList.Count() > 0)
{
    <div class="row mt-3">
        <div class="col-sm-12">
            <div class="row">
                @foreach (var article in Model.articlesList.OrderBy(o => o.Id))
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="@article.URLImage" class="card-img-top img-thumbnail" alt="Imagen de @article.Name">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-center">@article.Name</h5>
                                <div class="mt-auto text-center">
                                    <a asp-action="Details"
                                       asp-route-id="@article.Id"
                                       class="btn btn-success"
                                       style="border-radius:10px">
                                        Ver más
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="row mt-3">
        <div class="col-sm-12">
            <div class="alert alert-info text-center">
                No hay artículos disponibles por el momento.
            </div>
        </div>
    </div>
}
