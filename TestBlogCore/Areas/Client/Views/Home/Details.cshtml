@model TestBlogCore.Models.Article
@{
    ViewData["Title"] = "Detalles del artículo";

    DateTime createdAt = DateTime.Parse(Model.CreatedAt);

    string createdAtFormatted = createdAt.ToString("dd/MM/yyyy");
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-light row">
            <div class="col-12 col-md-6">
                <h4 class="text-center text-light py-1">@Model.Name</h4>
            </div>
            <div class="col-12 col-md-6 text-md-right">
                <h4 class="text-light">Fecha: @createdAtFormatted</h4>
            </div>
        </div>
        <div class="card-body">
            <img src="@(!string.IsNullOrEmpty(Model.URLImage) ? Model.URLImage : "/images/default.png")"
                 class="card-img-top img-thumbnail mb-3"
                 alt="@(!string.IsNullOrEmpty(Model.Name) ? Model.Name : "Imagen del artículo")">
            <p class="card-text">@Html.Raw(Model.Description)</p>
        </div>
        <div class="card-footer bg-light">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
